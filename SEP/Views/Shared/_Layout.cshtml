<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)
</head>
<body>

    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("index","Home")">IDS Search Engine</a>
            </div>
            <div class="collapse navbar-collapse" id="mainMenu">
                <ul class="nav navbar-nav">
                    <li id="mnHome" class="active"><a href="@Url.Action("index","Home")">Home</a></li>
                    <li id="mnAbout"><a href="@Url.Action("index", "About")">About</a></li>
                    <li id="mnContact"><a href="@Url.Action("index", "Contact")">Contact</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li id="mnSetting"><a href="@Url.Action("index","Setting")"><i class="fa fa-gear"></i> Setting</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>

    <div class="container body">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script>
        $(document).ready(function () {
            var ajaxCall = 0;
            NProgress.configure({ showSpinner: false });
            $(document).ajaxStart(function () {
                NProgress.start();
            }).ajaxSend(function () {
                ajaxCall++;
            }).ajaxComplete(function () {
                NProgress.inc();
                ajaxCall--;
            }).ajaxStop(function () {
                NProgress.done();
            });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
